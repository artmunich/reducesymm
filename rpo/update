# ./update 

#					Predrag Jun 20 2006

# ./update 	to process the ../siminos/rpo.tex
# make sure that you are in ../siminos/rpo

# prepare upload version
rm -f type.tex
ln -s upload.tex type.tex
latex --src-specials rpo
bibtex rpo
latex --src-specials rpo
latex --src-specials rpo
dvips rpo -o rpo.ps

# prepare draft version
rm -f type.tex
ln -s draft.tex type.tex
latex --src-specials rpo
bibtex rpo
latex --src-specials rpo
latex --src-specials rpo
dvips rpo -o draft.ps

echo ' '
echo '       rpo.ps, draft.ps updated'
echo ' '
